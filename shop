        ARow = new Array("A","A","A","A","A","A","A","A","A");  
        Price = new Array("50","30","60","40","20","60","40","120","100");     

        var total;
        var p;

        total=0;

	function pick(n){
    if(ARow[n]=="A"){
      ARow[n]="B";
      p = parseInt(Price[n]);
      total = total + p;
     // alert(total);
     // alert(p+1);
      switch(n){
        case 0:
        ciao.src = "ciao2.jpg";
        break;

        case 1:
        inaba.src = "inaba2.jpg";
        break;

        case 2:
        bone.src = "bone2.jpg";
        break

        case 3:
        tray.src = "tray2.jpg";
        break;

        case 4:
        lead.src = "lead2.jpg";
        break;

        case 5:
        bed.src = "bed2.jpg";
        break;

        case 6:
        toy.src = "toy2.jpg";
        break;

        case 7:
        tower.src = "tower2.jpg";
        break;

        case 8:
        chacky.src = "chacky2.jpg";
        break;

      }
    } 
    else{
      var check = confirm('Do you want to cancel this item?');
         if(check == true){
          ARow[n]="A";
          p = parseInt(Price[n]);
          total = total - p;
          //alert(total);
          switch(n){
           case 0:
           ciao.src = "ciao.jpg";
           break;

           case 1:
           inaba.src = "inaba.jpg";
           break;

           case 2:
           bone.src = "bone.jpg";
           break

           case 3:
           tray.src = "tray.jpg";
           break;

           case 4:
           lead.src = "lead.jpg";
           break;

           case 5:
           bed.src = "bed.jpg";
           break;

           case 6:
           toy.src = "toy.jpg";
           break;

           case 7:
           tower.src = "tower.jpg";
           break;

           case 8:
           chacky.src = "chacky.jpg";
           break;

               }
          }
          else{
                    }
    }
  }
function checkout(){
  alert("The total amount in your shopping cart is $"+total);
}
